<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditextWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/editexColorWhite</item>
        <item name="android:textSize">@dimen/Editext_textSize_login</item>
        <item name="android:textColorPrimary">@color/editexColorWhite</item>
        <item name="colorAccent">@color/editexColorWhite</item>
        <item name="colorControlNormal">@color/editexColorWhite</item>
        <item name="colorControlActivated">@color/editexColorWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditextBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/editexColorBlack</item>
        <item name="android:textSize">@dimen/Editext_textSize_login</item>
        <item name="android:textColorPrimary">@color/editexColorBlack</item>
        <item name="colorAccent">@color/editexColorBlack</item>
        <item name="colorControlNormal">@color/editexColorBlack</item>
        <item name="colorControlActivated">@color/editexColorBlack</item>

    </style>

</resources>
