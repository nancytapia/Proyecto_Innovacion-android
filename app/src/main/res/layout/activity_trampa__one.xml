<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    tools:context=".Vistas_Actividades.Trampa_One">

    <include layout="@layout/actionbar_toolbar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/picture_card"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        cardview:cardCornerRadius="4dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/picturecardard"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@drawable/good35"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/layo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:padding="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@color/sobra_card">

                <TextView
                    android:id="@+id/carrer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actividad 1"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/firstword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha limite de entrega:20/09/2018"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/firstwor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unidad 1"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/firtword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$5"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/desactivada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desactivada"
                    android:onClick="goActivadas"
                    android:layout_marginLeft="240dp"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>